<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HeatOptimizationApp.Views.MainWindow"
        Width="900" Height="650"
        Title="District Heat Manager"
        Background="#F9FAFB"
        Padding="20">

    <DockPanel LastChildFill="True">
        <!-- Top Bar -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,10">
            <Button Content="👤 Admin"
                    Width="100"
                    Height="30"
                    Background="#E5E7EB"
                    BorderBrush="#D1D5DB"
                    Foreground="Black"/>
        </StackPanel>

        <!-- Main Title -->
        <TextBlock Text="System Components"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Component Buttons Grid -->
        <WrapPanel ItemWidth="400"
                   ItemHeight="100"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Orientation="Horizontal">

            <Button Width="380" Height="90" Margin="10"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Top"
                    Padding="10"
                    Background="White"
                    BorderBrush="#D1D5DB">
                <StackPanel>
                    <TextBlock Text="⚙️  Asset Manager (AM)"
                               FontWeight="Bold"
                               FontSize="16"/>
                    <TextBlock Text="Manages and monitors all heating assets and their operational parameters."
                               TextWrapping="Wrap"
                               FontSize="12"/>
                </StackPanel>
            </Button>

            <Button Width="380" Height="90" Margin="10"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Top"
                    Padding="10"
                    Background="White"
                    BorderBrush="#D1D5DB">
                <StackPanel>
                    <TextBlock Text="🛢️  Source Data Manager (SDM)"
                               FontWeight="Bold"
                               FontSize="16"/>
                    <TextBlock Text="Handles input data collection and processing from various sources."
                               TextWrapping="Wrap"
                               FontSize="12"/>
                </StackPanel>
            </Button>

            <Button Width="380" Height="90" Margin="10"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Top"
                    Padding="10"
                    Background="White"
                    BorderBrush="#D1D5DB">
                <StackPanel>
                    <TextBlock Text="📊 Result Data Manager (RDM)"
                               FontWeight="Bold"
                               FontSize="16"/>
                    <TextBlock Text="Processes and stores optimization results and historical analysis."
                               TextWrapping="Wrap"
                               FontSize="12"/>
                </StackPanel>
            </Button>

            <Button Width="380" Height="90" Margin="10"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Top"
                    Padding="10"
                    Background="White"
                    BorderBrush="#D1D5DB">
                <StackPanel>
                    <TextBlock Text="🧠 Optimizer (OPT)"
                               FontWeight="Bold"
                               FontSize="16"/>
                    <TextBlock Text="Executes algorithms for heat production and cost efficiency."
                               TextWrapping="Wrap"
                               FontSize="12"/>
                </StackPanel>
            </Button>

            <Button Width="780" Height="90" Margin="10"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Top"
                    Padding="10"
                    Background="White"
                    BorderBrush="#D1D5DB">
                <StackPanel>
                    <TextBlock Text="📈 Data Visualization (DV)"
                               FontWeight="Bold"
                               FontSize="16"/>
                    <TextBlock Text="Provides dashboards and real-time monitoring visuals."
                               TextWrapping="Wrap"
                               FontSize="12"/>
                </StackPanel>
            </Button>
        </WrapPanel>
    </DockPanel>
</Window>
