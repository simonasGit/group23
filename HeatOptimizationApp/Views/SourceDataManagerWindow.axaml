<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
        xmlns:local="clr-namespace:HeatOptimizationApp.Views"
        x:Class="HeatOptimizationApp.Views.SourceDataManagerWindow"
        x:DataType="local:SourceDataManagerWindow"
        Width="900" Height="900"
        Title="Source Data Manager (SDM)">

  <ScrollViewer>
    <StackPanel Margin="20" Spacing="20">

      <!-- Header -->
      <StackPanel>
        <TextBlock Text="🛢 Source Data Manager (SDM)" FontSize="24" FontWeight="Bold"/>
        <TextBlock Text="Source repository for dynamic system information and time series data"
                   FontSize="14" Foreground="#6B7280"/>
      </StackPanel>

      <!-- Graph Cards -->
      <WrapPanel ItemWidth="420" ItemHeight="280" Orientation="Horizontal">

        <!-- Winter Heat Demand -->
        <Border Background="#F3F4F6" CornerRadius="8" Padding="10" Margin="10">
          <StackPanel Spacing="8">
            <TextBlock Text="Winter Heat Demand" FontWeight="Bold" FontSize="16"/>
            <Border Height="150" Background="#E5E7EB" CornerRadius="4" Padding="4">
              <lvc:CartesianChart Series="{Binding WinterDemandSeries}" />
            </Border>
            <StackPanel Orientation="Vertical" Spacing="4">
              <TextBlock Text="Time Resolution: 1 hour" FontSize="12"/>
              <TextBlock Text="Season: Winter" FontSize="12"/>
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Summer Heat Demand -->
        <Border Background="#F3F4F6" CornerRadius="8" Padding="10" Margin="10">
          <StackPanel Spacing="8">
            <TextBlock Text="Summer Heat Demand" FontWeight="Bold" FontSize="16"/>
            <Border Height="150" Background="#E5E7EB" CornerRadius="4" Padding="4">
              <lvc:CartesianChart Series="{Binding SummerDemandSeries}" />
            </Border>
            <StackPanel Orientation="Vertical" Spacing="4">
              <TextBlock Text="Time Resolution: 1 hour" FontSize="12"/>
              <TextBlock Text="Season: Summer" FontSize="12"/>
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Winter Electricity Price -->
        <Border Background="#F3F4F6" CornerRadius="8" Padding="10" Margin="10">
          <StackPanel Spacing="8">
            <TextBlock Text="Winter Electricity Price" FontWeight="Bold" FontSize="16"/>
            <Border Height="150" Background="#E5E7EB" CornerRadius="4" Padding="4">
              <lvc:CartesianChart Series="{Binding WinterElectricitySeries}" />
            </Border>
            <StackPanel Orientation="Vertical" Spacing="4">
              <TextBlock Text="Time Resolution: 1 hour" FontSize="12"/>
              <TextBlock Text="Season: Winter" FontSize="12"/>
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Summer Electricity Price -->
        <Border Background="#F3F4F6" CornerRadius="8" Padding="10" Margin="10">
          <StackPanel Spacing="8">
            <TextBlock Text="Summer Electricity Price" FontWeight="Bold" FontSize="16"/>
            <Border Height="150" Background="#E5E7EB" CornerRadius="4" Padding="4">
              <lvc:CartesianChart Series="{Binding SummerElectricitySeries}" />
            </Border>
            <StackPanel Orientation="Vertical" Spacing="4">
              <TextBlock Text="Time Resolution: 1 hour" FontSize="12"/>
              <TextBlock Text="Season: Summer" FontSize="12"/>
            </StackPanel>
          </StackPanel>
        </Border>

      </WrapPanel>

      <!-- Controls -->
      <Border Background="#F3F4F6" CornerRadius="8" Padding="10" Margin="10">
        <StackPanel>
          <TextBlock Text="Data Management Controls" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
          <WrapPanel ItemWidth="250" ItemHeight="30">
            <Button Content="⏱ Update" Background="#E5E7EB" Foreground="Black"/>
            <Button Content="💾 Save" Background="#E5E7EB" Foreground="Black"/>
          </WrapPanel>
        </StackPanel>
      </Border>

    </StackPanel>
  </ScrollViewer>
</Window>
