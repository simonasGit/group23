<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
        x:Class="HeatOptimizationApp.Views.DataVisualizationWindow"
        Width="900" Height="750"
        Title="Data Visualization Dashboard">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20">

            
            <Border Background="#FFF" BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="10" Padding="15">
                <StackPanel>
                    <TextBlock Text="❄️ Winter Electricity Price" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <lvc:CartesianChart x:Name="WinterPriceChart" Height="300" />
                </StackPanel>
            </Border>

            
            <Border Background="#FFF" BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="10" Padding="15">
                <StackPanel>
                    <TextBlock Text="🔥 Winter Heat Demand" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <lvc:CartesianChart x:Name="WinterChart" Height="300" />
                </StackPanel>
            </Border>

            
            <Border Background="#FFF" BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="10" Padding="15">
                <StackPanel>
                    <TextBlock Text="🌞 Summer Electricity Price" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <lvc:CartesianChart x:Name="SummerChart" Height="300" />
                </StackPanel>
            </Border>

            
            <Border Background="#FFF" BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="10" Padding="15">
                <StackPanel>
                    <TextBlock Text="🌴 Summer Heat Demand" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <lvc:CartesianChart x:Name="SummerDemandChart" Height="300" />
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Window>
