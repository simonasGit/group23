<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
        xmlns:local="clr-namespace:HeatOptimizationApp.Views"
        x:Class="HeatOptimizationApp.Views.OptimizerWindow"
        x:DataType="local:OptimizerWindow"
        Width="900" Height="650"
        Title="Optimizer (OPT)">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="15">

            <TextBlock Text="âš™ï¸ Optimizer (OPT)" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <WrapPanel ItemWidth="420" ItemHeight="200" Orientation="Horizontal">

                <!-- Optimization Goals -->
                <Border Background="#F3F4F6" CornerRadius="8" Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Optimization Goals" FontWeight="Bold" FontSize="16"/>
                        <StackPanel Margin="10,10">
                            <TextBlock Text="ðŸ”µ Secure heat availability" FontSize="12"/>
                            <TextBlock Text="ðŸ”µ Minimize heat production costs" FontSize="12"/>
                            <TextBlock Text="ðŸ”µ Maximize electricity profit" FontSize="12"/>
                            <TextBlock Text="ðŸ”µ Optimize electricity consumption costs" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Key Performance Metrics -->
                <Border Background="#F3F4F6" CornerRadius="8" Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Key Performance Metrics" FontWeight="Bold" FontSize="16"/>
                        <StackPanel Margin="10,10">
                            <TextBlock Text="Net Production Costs: DKK 0.00/MWh" FontSize="12"/>
                            <TextBlock Text="Heat Availability: 100%" FontSize="12"/>
                            <TextBlock Text="Electricity Trading Balance: + DKK 0.00" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Optimization Scenarios -->
                <Border Background="#F3F4F6" CornerRadius="8" Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Optimization Scenarios" FontWeight="Bold" FontSize="16"/>
                        <StackPanel Margin="10,10">
                            <TextBlock Text="Scenario 1" FontWeight="Bold" FontSize="12"/>
                            <StackPanel Margin="10,5">
                                <TextBlock Text="âš« Two gas boilers" FontSize="12"/>
                                <TextBlock Text="âš« One oil boiler" FontSize="12"/>
                            </StackPanel>
                            <TextBlock Text="Scenario 2" FontWeight="Bold" FontSize="12" Margin="0,10,0,0"/>
                            <StackPanel Margin="10,5">
                                <TextBlock Text="âš« One gas boiler" FontSize="12"/>
                                <TextBlock Text="âš« One ooil boiler" FontSize="12"/>
                                <TextBlock Text="âš« One gas motor" FontSize="12"/>
                                <TextBlock Text="âš« One heat pump" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Optimization Chart -->
                <Border Background="#F3F4F6" CornerRadius="8" Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Optimization Chart" FontWeight="Bold" FontSize="16"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <lvc:CartesianChart x:Name="WinterChart" Series="{Binding Series}"></lvc:CartesianChart>
                        </Grid>
                    </StackPanel>
                </Border>

            </WrapPanel>

        </StackPanel>
    </ScrollViewer>
</Window>
