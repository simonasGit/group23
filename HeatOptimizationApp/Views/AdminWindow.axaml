<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HeatOptimizationApp.Views.AdminWindow"
        Width="900" Height="600"
        Title="System Configuration">

  <DockPanel>

    <!-- Sidebar -->
    <StackPanel DockPanel.Dock="Left"
                Background="#F3F4F6"
                Width="180"
                Margin="10">
      <TextBlock Text="⚙️ Dashboard" FontWeight="Bold" Margin="0,5"/>
      <TextBlock Text="🔥 Heat Management" Margin="0,5"/>
      <TextBlock Text="📈 Energy Market" Margin="0,5"/>
      <TextBlock Text="🗓 Scheduling" Margin="0,5"/>
      <TextBlock Text="⚙ Settings" Margin="0,5"/>
    </StackPanel>

    <!-- Main Content -->
    <ScrollViewer>
      <StackPanel Margin="20">

        <!-- Header -->
        <Grid Margin="0,0,0,20">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <TextBlock Text="System Configuration" FontSize="24" FontWeight="Bold"/>
          <Button Grid.Column="1" Content="Save Changes" Width="120" Background="Black" Foreground="White"/>
        </Grid>

        <!-- Heating Scenarios -->
        <Border Background="#FFFFFF" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,20">
          <StackPanel>
            <TextBlock Text="Heating Scenarios" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <TextBlock Text="Scenario 1: Basic Setup" FontSize="14" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal">
              <Button Content="🔥 Gas Boiler 1" Margin="0,5,10,0"/>
              <Button Content="🔥 Gas Boiler 2" Margin="0,5,10,0"/>
              <Button Content="🛢 Oil Boiler" Margin="0,5,10,0"/>
            </StackPanel>

            <TextBlock Text="Scenario 2: Advanced Setup" FontSize="14" FontWeight="Bold" Margin="10,10,0,0"/>
            <StackPanel Orientation="Horizontal">
              <Button Content="🔥 Gas Boiler" Margin="0,5,10,0"/>
              <Button Content="🛢 Oil Boiler" Margin="0,5,10,0"/>
              <Button Content="🚗 Gas Motor" Margin="0,5,10,0"/>
              <Button Content="🌡 Heat Pump" Margin="0,5,10,0"/>
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Period Configuration -->
        <Border Background="#FFFFFF" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="15">
          <StackPanel>
            <TextBlock Text="Period Configuration" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5" Spacing="20">
              <!-- Winter Period -->
              <StackPanel Margin="0,0,20,0">
                <TextBlock Text="Winter Period" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="Start Date" FontSize="12"/>
                <DatePicker SelectedDate="2025-11-01"/>
                <TextBlock Text="End Date" FontSize="12" Margin="0,10,0,0"/>
                <DatePicker SelectedDate="2025-03-31"/>
              </StackPanel>

              <!-- Summer Period -->
              <StackPanel>
                <TextBlock Text="Summer Period" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="Start Date" FontSize="12"/>
                <DatePicker SelectedDate="2025-04-01"/>
                <TextBlock Text="End Date" FontSize="12" Margin="0,10,0,0"/>
                <DatePicker SelectedDate="2025-10-31"/>
              </StackPanel>
            </StackPanel>
          </StackPanel>
        </Border>

      </StackPanel>
    </ScrollViewer>
  </DockPanel>
</Window>
