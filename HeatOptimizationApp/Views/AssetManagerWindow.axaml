<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HeatOptimizationApp.Views.AssetManagerWindow"
        Width="900" Height="650"
        Title="Asset Manager (AM)">

  <ScrollViewer>
    <StackPanel Margin="20" Spacing="20">

      <TextBlock Text="⚙️ Asset Manager (AM)" FontSize="24" FontWeight="Bold" />

      <!-- Top Row -->
      <WrapPanel ItemWidth="420" ItemHeight="120" Orientation="Horizontal">

        <!-- Heating Grid Info -->
        <Border Background="#F3F4F6" CornerRadius="8" Padding="10" Margin="10">
          <StackPanel>
            <TextBlock Text="Heating Grid Information" FontWeight="Bold" FontSize="16" />
            <TextBlock Text="North District Grid" FontWeight="Bold" FontSize="14" Margin="0,10,0,0"/>
            <TextBlock Text="Main heating distribution network serving northern district area"
                       FontSize="12" Foreground="#6B7280"/>
          </StackPanel>
        </Border>

        <!-- System Overview -->
        <Border Background="#F3F4F6" CornerRadius="8" Padding="10" Margin="10">
          <StackPanel Spacing="5">
            <TextBlock Text="System Overview" FontWeight="Bold" FontSize="16" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
              <TextBlock Text="Total Heat Capacity" FontSize="12"/>
              <TextBlock Text="00 MW" FontSize="12" FontWeight="Bold" HorizontalAlignment="Right"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Network Length" FontSize="12"/>
              <TextBlock Text="00.0 km" FontSize="12" FontWeight="Bold" HorizontalAlignment="Right"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="Connected Buildings" FontSize="12"/>
              <TextBlock Text="127" FontSize="12" FontWeight="Bold" HorizontalAlignment="Right"/>
            </StackPanel>
          </StackPanel>
        </Border>

      </WrapPanel>

      <!-- Production Units -->
      <TextBlock Text="Production Units" FontWeight="Bold" FontSize="16" Margin="10,0"/>

      <WrapPanel ItemWidth="400" ItemHeight="120" Orientation="Horizontal">

        <!-- Gas Boiler -->
        <Border Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Margin="10" Padding="10">
          <StackPanel Orientation="Horizontal" Spacing="10">
           <!--  <Image Width="32" Height="32" Source="/Assets/Icons/boiler.png"/> this is commented becaus avalonia coulndt find it and crashed i think-->
            <StackPanel>
              <TextBlock Text="Gas Boiler Unit 1" FontWeight="Bold" />
              <TextBlock Text="Heat Output: 00 MW" FontSize="12"/>
              <TextBlock Text="Efficiency: 100%" FontSize="12"/>
              <TextBlock Text="CO2 Emissions: 0.0 kg/MWh" FontSize="12"/>
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Heat Pump -->
        <Border Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Margin="10" Padding="10">
          <StackPanel Orientation="Horizontal" Spacing="10">
           <!-- <Image Width="32" Height="32" Source="/Assets/Icons/heatpump.png"/>-->
            <StackPanel>
              <TextBlock Text="Heat Pump Unit" FontWeight="Bold" />
              <TextBlock Text="Heat Output: 0 MW" FontSize="12"/>
              <TextBlock Text="COP: 0.0" FontSize="12"/>
              <TextBlock Text="Electricity Use: 0.0 MW" FontSize="12"/>
            </StackPanel>
          </StackPanel>
        </Border>

      </WrapPanel>

    </StackPanel>
  </ScrollViewer>
</Window>
